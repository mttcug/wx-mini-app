.page {
  background: #fff;
}
.weui-navbar__item{
  position: relative;
  display: inline-block;
  width: 33%;
  text-align: center
}
.weui-navbar__title{
line-height: 51px;
}
.weui-navbar .weui-bar__item_on {
  color: #ff3a55;
}

.weui-bar__item_on {
  color: #ff3a55;
}

.weui-navbar__slider {
  background-color: #ff3a55;
}

.weui-navbar {
  background-color: #fbfbfb;
  position: relative;
}

.weui-tab {
  position: fixed;
  width: 100%;
  z-index: 9999;
  height: 51px;
  /* height: auto; */
}

.weui-tab__panel {
  max-height: 285px;
  z-index: 999;
  width: 100%;
  border-bottom: 1px solid #e6e6e6;
  padding-top: 0px;
  overflow: inherit;
}

.weui-tab__panel::after {
  content: "020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.weui-tab__content-industry, .weui-tab__content-location,
.weui-tab__content-area {
  position: relative;
  max-height: 285px;
  z-index: 9999;
  /*height: 285px;*/
  background: white;
}

/*行业二级*/

.weui-tab__panel-industry, .weui-tab__panel-location {
  width: 59vw;
  display: inline-block;
  max-height: 285px;
  overflow: scroll;
  background: #fff;
  overflow-x: hidden;
  vertical-align: top;
}

/*行业一级*/

.weui-navbar-industry, .weui-navbar-location {
  width: 40%;
  display: inline-block;
  max-height: 285px;
  overflow: scroll;
  background: #fff;
  border-right: 1px solid #e6e6e6;
  overflow-x: hidden;
}

.weui-navbar__item-industry, .weui-navbar__item-location,
.weui-navbar__item-area {
  height: 40px;
  background-color: #fbfbfb;
  line-height: 40px;
  border-bottom: 1px solid #fbfbfb;
}

.weui-navbar__item-area {
  border-bottom: 1px solid #e6e6e6;
  position: relative;
}

.weui-navbar__title-industry, .weui-navbar__title-location,
.weui-navbar__title-area {
  margin-left: 15px;
  font-size: 0.87rem;
}

.weui-navbar__title-small-industry, .weui-navbar__title-small-location {
  margin-left: 15px;
  font-size: 0.87rem;
  position: relative;
}

/*小行业*/

.weui-navbar__item-small-industry, .weui-navbar__item-small-location {
  border-bottom: 1px solid #e6e6e6;
  height: 40px;
  background-color: white;
  line-height: 40px;
  position: relative;
}

.weui-navbar-area {
  max-height: 285px;
  overflow: scroll;
  overflow-x: hidden;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.border-right {
  /*border-right: 1px solid #e6e6e6;*/
}

.list-right-border {
  border-right-color: #fff;
  border-right: 1px solid white;
}

.white-backgronud {
  background: white;
  position: relative;
}

