}

.checked-tag {
  width: 15px;
  height: 10px;
  position: absolute;
  right: 20px;
  top: 18px;
}

.border-left {
  /*border-left: 1px solid #e6e6e6;*/
}

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
  display: block;
  position: fixed;
}

/*列表*/

.transfer-list {
  padding: 51px 0px 0px 0px;
}

.content-container {
  margin: 12px 0px;
  display: inline-block;
  width: 100%;
}

.list-container {
  padding: 0px 20px;
}

.info-block-item {
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
}

.img-block {
  vertical-align: middle;
}

.img-block{
  width: 22%;
  display: inline-block;
  vertical-align:top;

}
 .item-image {
 width: 100%;
  height: 64px;
  display: inline-block;
 }

.text-block {
  display: inline-block;
  width: 70%;
  padding-left: 10px;
  vertical-align: middle;
}

.info-text-title {
  display: inline-block;
  font-size: 0.83rem;
  max-width: 90%;
  /*height: 30px;*/
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  word-wrap: break-word;
  vertical-align: middle;
  font-weight: 600;
}

.fee-image {
  display: inline-block;
  width: 12px;
  height: 14px;
  margin-left: 5px;
  position: relative;
  top: 5rpx;
}

.detail, .main-location {
  font-size: 0.7rem;
  color: #666;
}

.operate-sort, .locations, .transfer-fee, .area-info {
  margin-right: 15px;
  display: inline-block;
}

.area-info {
  color: #ff3a55;
}

.info-time {
  position: absolute;
  right: 0px;
  top: 0px;
  color: #bababa;
}

.time-line {
  position: relative;
}

/*mask出现禁止页面滚动*/

.forbiddenScroll {
  height: 100%;
  overflow-y: hidden;
}

page {
  height: 100%;
}

/*下拉框选项三角形*/

.weui-navbar__title {
  position: relative;
  width: 80%;
  overflow:hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}

.down-triangle::after {
  content: "";
  height: 0;
  width: 0;
  /*border-width: 10px 3px 0px 3px;
  border-color: #c8c8cd;
  border-style: solid;*/
  border-width: 5px; /*如果想改变倒三角形的大小,就改变这里的像素值*/
  border-style: solid;
  border-color: #666 #fff #fff #fff;
  position: absolute;
  top: 40%;
  left: auto;
  right: 10%;
}

.up-triangle::after {
  content: "";
  height: 0;
  width: 0;
  /*border-width: 10px 3px 0px 3px;
  border-color: #c8c8cd;
  border-style: solid;*/
  border-width: 5px; /*如果想改变倒三角形的大小,就改变这里的像素值*/
  border-style: solid;
  border-color: #fff #fff #666 #fff;
  position: absolute;
  top: 30%;
  left: auto;
  right: 10%;
}

