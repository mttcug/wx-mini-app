.page {
  background: #f0f0f0;
}

.page__hd, .weui-search-bar {
  background: #fff;
  height:48px;
}

.weui-search-bar {
  padding: 8px 25px;
}
.weui-icon-clear{
  display: inline-block;
}
.weui-icon-search_in-box {
  left: 20px;
}

.weui-search-bar__box {
  padding-left: 45px;
}
.weui-search-bar__box input{
 display:inline-block;
vertical-align:top;
font-size:0.85rem;
margin-left:10px;

}
.weui-search-bar__label {
  background: #f0f0f0;
  padding-left: 20rpx;
  text-align: left;
}

.weui-search-bar__form {
  background: #f0f0f0;
  border-radius: 35px;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

/*城市列表*/

.block {
  padding: 0rpx 40rpx 0rpx 40rpx;
}

.city-block {
  margin-top: 40rpx;
}

.city-block .title {
  font-size: 0.75rem;
  color: #888;
}

.city-block .current-city, .city-block .hot-cities .city {
  margin-top: 15rpx;
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  text-align: center;
  font-size: 0.8rem;
  line-height: 80rpx;
  color: #424242;
}

.city-block .hot-cities {
}

.city-block .hot-cities .city {
  display: inline-block;
  margin-right: 20rpx;
}

.word-list {
  width: 100%;
}

.word-list-item .word {
  width: 100%;
  height: 60rpx;
  color: #888;
  font-size: 0.75rem;
  line-height: 60rpx;
  padding-left: 40rpx;
}

.word-list-item .list {
  padding: 0rpx 40rpx;
  background: #fff;
}

.word-list-item .list .city {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 0.75rem;
  border-bottom: 1px solid #f0f0f0;
  color: #424242;
}

.words-list {
  position: fixed;
  top: 15%;
  right: 13rpx;
}

.words-list .word-item {
  margin-top: 4px;
  height: 18px;
  color: #888;
  font-size: 0.85rem;
  font-size: 700;
  text-align: center;
}
.words-list .select-blue{
  color: #0072ca;
}
